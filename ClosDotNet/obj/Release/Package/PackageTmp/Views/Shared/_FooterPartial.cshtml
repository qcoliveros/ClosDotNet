        <br />
        <footer>
            <p class="copyright">
                @LoginResources.Copyright
                <br />
                @typeof(ClosDotNet.MvcApplication).Assembly.GetName().Version | @System.Net.Dns.GetHostName()
            </p>
        </footer>
    </div>
}
